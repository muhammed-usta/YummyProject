@model List<YummyProject.Models.Chef>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Chef Area</h2>

<table class="table table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Name</th>
        <th>Title</th>
        <th>Description</th>
        <th>Social Media</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ChefId</th>
            <td><img src="@item.ImageUrl" style="width:50px;height:50px;" /></td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                @if (item.ChefSocials != null && item.ChefSocials.Any())
                {
                    <ul>
                        @foreach (var social in item.ChefSocials)
                        {
                            <li>@social.SocialMediaName</li>
                        }
                    </ul>
                }
                else
                {
                    <span>No social media accounts</span>
                }
            </td>
            <td><a href="/Chef/DeleteChef/@item.ChefId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Chef/UpdateChef/@item.ChefId" class="btn btn-success">Update</a></td>

        </tr>
    }

</table>

<br />
<a href="/Chef/AddChef" class="btn btn-info">Add New Chef Area</a>
<a href="/Chef/DeleteSocialMedia" class="btn btn-info">Delete Chef Social Area</a>
<a href="/Chef/AddSocialMedia" class="btn btn-info">Add Chef Social Area</a>






