@model YummyProject.Models.About
@{
    ViewBag.Title = "AddAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Add New About Area Page</h2>

<form method="post" enctype="multipart/form-data">

    <div>
        <label for="ImageFile">Upload Photo</label>
        <input type="file" name="ImageFile" id="ImageFile" />
    </div>
    <br />

    <div>
        <label for="ImageFile2">Upload Video's Photo</label>
        <input type="file" name="ImageFile2" id="ImageFile2" />
    </div>
    <br />

    <br />
    <label>Item1</label>
    @Html.TextBoxFor(x => x.Item1, new { @class = "form-control" })
    <div class="text-danger">   @Html.ValidationMessageFor(x => x.VideoUrl) </div>

    <label>Item2</label>
    @Html.TextBoxFor(x => x.Item2, new { @class = "form-control" })
    <div class="text-danger">   @Html.ValidationMessageFor(x => x.VideoUrl) </div>

    <label>Item3</label>
    @Html.TextBoxFor(x => x.Item3, new { @class = "form-control" })
    <div class="text-danger">   @Html.ValidationMessageFor(x => x.VideoUrl) </div>

    <label>Description</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <div class="text-danger">   @Html.ValidationMessageFor(x => x.VideoUrl) </div>

    <label>Phone</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    <div class="text-danger">   @Html.ValidationMessageFor(x => x.VideoUrl) </div>

    <label>Video Url</label>
    @Html.TextBoxFor(x => x.VideoUrl, new { @class = "form-control" })
    <div class="text-danger">   @Html.ValidationMessageFor(x => x.VideoUrl) </div>

    <br />
  
    <button class="btn btn-primary">Submit</button>
</form>