
@model List<YummyProject.Models.ContactInfo>

<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>İletişim</h2>
        <p><span>Yardıma mı İhtiyacınız Var?</span> <span class="description-title">Bize Ulaşın</span></p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        @foreach (var contact in Model)
        {

            <div class="mb-5">
                <iframe style="width: 100%; height: 400px;" src="@contact.MapUrl" frameborder="0" allowfullscreen=""></iframe>
            </div><!-- End Google Maps -->


            <div class="row gy-4">

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="200">
                        <i class="icon bi bi-geo-alt flex-shrink-0"></i>
                        <div>
                            <h3>Adres</h3>
                            <p>@contact.Address</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="300">
                        <i class="icon bi bi-telephone flex-shrink-0"></i>
                        <div>
                            <h3>Telefon</h3>
                            <p>@contact.PhoneNumber</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="400">
                        <i class="icon bi bi-envelope flex-shrink-0"></i>
                        <div>
                            <h3>Mail</h3>
                            <p>@contact.Email</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="500">
                        <i class="icon bi bi-clock flex-shrink-0"></i>
                        <div>
                            <h3>Çalışma Saatleri<br></h3>
                            <p><strong>Pazartesi-Cumartesi:</strong> @contact.OpenHours; <strong>Pazar:</strong> Kapalı</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

            </div>
        }
        <!-- Message Form -->

        @Html.Action("DefaultSendMessage")<!-- End Contact Form -->

    </div>

</section>


